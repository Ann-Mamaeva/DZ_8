@bot.message_handler(commands=['start'])
def get_name(message): #получаем имя
    bot.send_message(message.from_user.id, 'введи свое имя')
    bot.register_next_step_handler(message, start)
@bot.message_handler(content_types=['text'])
def start(message):
    if str.lower(message.text) in lib:
        bot.send_message(message.from_user.id, lib.get(str.lower(message.text)))
    else:
        bot.send_message(message.from_user.id,'из вашего имени пирожка не сложишь')

bot.infinity_polling()
